{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts", "logs/*", "last-dev.log"],
  "exec": "npx ts-node --transpile-only -r tsconfig-paths/register src/bot.ts",
  "signal": "SIGINT",
  "delay": 1500,
  "events": {
    "restart": "node scripts/kill-port.cjs 2999 3001"
  }
} 